            <a class="navbar-brand" href="#">Movie App</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to 'Home', root_path %></li>
              <li><a href="#">About</a></li>
