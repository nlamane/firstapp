<!DOCTYPE html>
<html>
  <head>
    <title>MovieApp</title>


<nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Movie App</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to 'Home', root_path %></li>
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><a><%= current_user %></a></li>
                <li class="active"><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete  %></li>
              <% else %>
                <li><%= link_to "Se connecter", new_user_session_path  %></li>
                <li><%= link_to "S’inscrire", new_user_registration_path  %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    	<%= yield %>
    </div>
  </body>
</html>
